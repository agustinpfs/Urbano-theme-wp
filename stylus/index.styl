.Index	
	display: flex
	justify-content: space-around
	flex-wrap: wrap
	&-article
		width: 27.5vw
		height 100%
		overflow: hidden
		position: relative
		cursor: pointer
		margin 2rem
	img 
		width: 100%
	&-title
		position: absolute
		width: 100%
		bottom 0
		padding 1rem
		background-color  alpha(black, 0.7)
		// font-family: arial
		overflow: hidden
		height 25px
		z-index: 2
		color white
	&-slide
		display none
		background-color alpha(black, 0.8)
		height: 100%
		width 100%	
		position: absolute
		top 0
		left 0



	&-excerpt
		width:  100%
		color white
		font-size: 1rem
